<div class="topic">
	<form class="edit" action="/forum/<%= @topics.first['name'] %>/edittopic" method="post">
		<div class="input-row">
				<label for="new_name">Topic Name: </label>
				<input type="hidden" name="_method" value="put">
  			<input type="text" name="new_name"  id="new_name" value="<%= @topics.first['name'] %>" />
		</div>
		<div class="input-row">
			<label for="description">Description: </label>
			<input type="hidden" name="_method" value="put">
			<textarea name="description" id="description"><%= @topics.first['description'] %></textarea>
		</div>
		<div class="input-row">
				<label for="img_url">Image URL: </label>
				<input type="hidden" name="_method" value="put">
  			<input type="img_url" name="img_url"  id="img_url" value="<%= @topics.first['img_url'] %>" />
		</div>
		<div class="input-row">
			<input class="button" type="submit" value="Submit" />
		</div>
	</form>
	<form method="post" action="/forum/<%= @topics.first['name'] %>/delete"> 
		<input type="hidden" name="_method" value="delete">
		<button class="button" type="submit">Delete</button>
	</form>
	<a href="/forum/<%= @topics.first['name'] %>"><input class="button" type="submit" value="Cancel" /></a>
	<h3><%=@str%></h3>
</div>